{
  "name": "the-good-corner-backend",
  "version": "0.0.1",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "dev": "ts-node-dev src/index.ts",
    "build": "tsc",
    "start": "node build/index.js",
    "resetDB": "ts-node src/db/reset.ts",
    "migration:generate": "npx typeorm-ts-node-commonjs migration:generate src/db/migrations/migration -d src/db/index.ts",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d src/db/index.ts",
    "migration:revert": "npx typeorm-ts-node-commonjs migration:revert -d src/db/index.ts",
    "lint": "biome check",
    "format": "biome format --write && biome check --write",
    "testDB": "docker compose -f docker-compose.integration-tests.yml up testDB --wait",
    "test": "jest --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ComicScrip/the-good-corner-nov25.git"
  },
  "keywords": [
    "ads"
  ],
  "author": "Pierre Genthon",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ComicScrip/the-good-corner-nov25/issues"
  },
  "homepage": "https://github.com/ComicScrip/the-good-corner-nov25#readme",
  "dependencies": {
    "@apollo/server": "^5.2.0",
    "@as-integrations/fastify": "^3.1.0",
    "@better-auth/passkey": "^1.4.18",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "argon2": "^0.40.3",
    "better-auth": "^1.4.18",
    "class-validator": "^0.14.3",
    "fastify": "^5.6.2",
    "graphql": "^16.12.0",
    "graphql-scalars": "^1.25.0",
    "nodemailer": "^8.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "ts-dotenv": "^0.9.1",
    "ts-node-dev": "^2.0.0",
    "type-graphql": "^2.0.0-rc.2",
    "typeorm": "^0.3.27"
  },
  "overrides": {
    "minimatch": "^10.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/jest": "^30.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.16.0",
    "graphql-tag": "^2.12.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.6.2"
  }
}
